from tkinter import *
from sympy import *

window = Tk()

window.geometry("500x500")
window.title("Expression Simplifier")

def Calculation():
    Expression = entry.get()
    Sympy_Expression = sympify(Expression)
    simplified_expression = simplify(Sympy_Expression)
    result.config(text=f"Your result is {simplified_expression}")

Intro_Label = Label(window, text="Enter any expression and the computer will simplify it")
Intro_Label.pack()

entry = Entry(window)
entry.pack()

result = Label(window)

Submit_Button = Button(window, text="Submit")
Submit_Button.pack()
Submit_Button.config(command=Calculation)

result.pack()

window.mainloop()
